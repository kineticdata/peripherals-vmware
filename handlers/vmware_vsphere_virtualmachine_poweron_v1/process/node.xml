<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="vmware_vsphere_virtualmachine_poweron" name="VMWare VSphere Virtual Machine PowerOn" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>Powers on the specified VMWare VSphere virtual machine.</description>
    <helpurl>http://ktc.kineticdata.com/handler/vmware_vsphere_virtualmachine_poweron/1</helpurl>
    <visible>false</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="vm_name" label="VM Name" required="true" tooltip="The name of the VM that you want to power on" />
    </parameters>
    <handler name="vmware_vsphere_virtualmachine_poweron" version="1">
        <infos>
            <info name="server_url">&lt;%= @info['server_url'] %&gt;</info>
            <info name="username">&lt;%= @info['username'] %&gt;</info>
            <info name="password">&lt;%= @info['password'] %&gt;</info>
            <info name="enable_debug_logging">&lt;%= @info['enable_debug_logging'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name='vm_name'>&lt;%= @parameters['vm_name'] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml"/>
</taskDefinition>
